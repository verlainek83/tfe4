extends layout

block content
  h1= title
  if authenticationFailed
    .alert.alert-warning.alert-dismissible.fade.show Wrong username or password.
      button(type="button" class="btn-close" data-dismiss="alert" aria-label="Close")

  form(action="/login", method="post")
    .mb-3
      label.form-label(for="usernameInput") Username:
      input#usernameInput.form-control(name="username", type="text", autofocus)
    .mb-3
      label.form-label(for="passwordInput") Password:
      input#passwordInput.form-control(name="password", type="password")
    .mb-3
      button.btn.btn-primary(type="submit") Login
    .mb3 
      | Don't have an account?
      a(href="/signup" class={active: currentUrl === "/signup"}) Sign Up
    .mb3
      | Forgot password?
      a(href="/signup" class={active: currentUrl === "/signup"}) Forgot your password?
