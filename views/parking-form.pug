extends layout

block content
  if user
    .menu-bar
      ul
        li
          a(href="/parkings/create" class={active: currentUrl === "/parkings/create/new"}) 
            i.fa.fa-save
            |  Enregistrer son parking
        li
          a(href="/locations/create" class={active: currentUrl === "/locations/create/new"}) 
            i.fa.fa-ticket
            |  Faire une location
        li
          a(href='/reservations')
            i.fa.fa-ticket
            |  Faire une r√©servation
          .sub-menu-1
            ul
              li.hover-me
                a(href='')
                | Profil
                i.fa.fa-angle-right
                .sub-menu-2
                  ul
                    li
                      a(href='/account') Profil
                    li
                      a(href='') Mes reservations
                    li
                      a(href='/mesParkings') Mes parkings
                    li
                      a(href='') Dashboard
              li
                a(href='') Mes reservations
              li
                a(href='') Mes parkings
              li
                a(href='') Dashboard
        li
          a(href='/publications')
            i.fa.fa-newspaper-o
            |  Publications
        li.active
          a(href='')
            i.fa.fa-user
            |  #{user.username}
          .sub-menu-1
            ul
              li
                a(href='/account') Profil
              li
                a(href='') Mes reservations
              li
                a(href='') Mes parkings
              li
                a(href='') Dashboard
        li
          a(href='/logout')
            i.fa.fa-sign-out
            |  Se d&eacute;connecter

  h1= nombrePlaces
  i.fa.fa-info-circle(aria-hidden='true')
  |  Bienvenue !
  p Enregistrez votre parking sur Placetopark.
  p La location de parking z√©ro contraintes ! üòç

  form#form(action="/parkings/create" method="post")
    .mb-3
      label.form-label(for="nombrePlacesInput") Nombre de Places:
      input#nombrePlacesInput.form-control(type="number", name="nombrePlaces")
    .mb-3
      label.form-label(for="adresseIdAdresseSelect") Commune
      select#adresseIdAdresseSelect(name="adresseIdAdresse")
        each adresse in adresses
          option(value=adresse.idAdresse) #{adresse.idAdresse}, #{adresse.nom} , #{adresse.numero}
    .mb-3
      //- label.form-label(for="userUsernameInput") Nom de l'utilisateur
      //- select#userUsernameInput(name="userUsername" value=user.username)
        //- each u in users
          option(value=u.username) #{u.username}
      label.form-label(for="userUsernameInput") Nom de l'utilisateur
      input#userUsernameInput.form-control(type="text", name="userUsername", value=user.username)
    .mb-3
      button.btn.btn-primary(type="submit") Save
      | &nbsp;
      a.btn.btn-outline-danger(href="/parkings/create") Cancel