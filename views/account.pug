extends layout

block content
  if user
    .menu-bar
      ul
        li
          a(href="/parkings/create" class={active: currentUrl === "/parkings/create/new"}) 
            i.fa.fa-save
            |  Enregistrer son parking
        li
          a(href="/parkings" class={active: currentUrl === "/parkings"}) 
            i.fa.fa-ticket
            |  Faire une reservation
        li
           a(href="/parkings" class={active: currentUrl === "/parkings"})
            i.fa.fa-ticket
            |  Faire une location
        li
          a(href='/publications')
            i.fa.fa-newspaper-o
            |  Publications
        li.active
          a(href='')
            i.fa.fa-user
            |  #{user.username}
          .sub-menu-1
            ul
              li
                a(href='/account') Profil
              li
                a(href='mesReservations') Mes reservations
              li
                a(href='') Mes parkings
              li
                a(href='') Dashboard
        li
          a(href='/logout')
            i.fa.fa-sign-out
            |  Se d&eacute;connecter
    //- p Hello, #{user.username}, good to see you!
    center()
      p Bonjour, 
        b #{user.username}, 
          i Cela fait plaisir de te revoir!
      p Bienvenue sur Placetopark
      h1 Tes informations
      table.table(style='background-color:powderblue; border-collapse: collapse; border: 1px solid black;')
        thead
          tr
            th(style='border: 1px solid black;')(scope="col") username
            th(style='border: 1px solid black;')(scope="col") Nom
            th(style='border: 1px solid black;')(scope="col") Pr√©nom
            th(style='border: 1px solid black;')(scope="col") Telephone
            th(style='border: 1px solid black;')(scope="col") Email
        tbody
          tr
            td(style='border: 1px solid black;')= user.username
            td(style='border: 1px solid black;')= user.nom
            td(style='border: 1px solid black;')= user.prenom
            td(style='border: 1px solid black;')= user.telephone
            td(style='border: 1px solid black;')= user.usermail
  else
    p Please log in...