        li
          a(href="/locations/create" class={active: currentUrl === "/locations/create/new"}) 
            i.fa.fa-ticket
            |  Faire une location
        li
          a(href='/reservations')
            i.fa.fa-ticket
            |  Faire une r√©servation
          .sub-menu-1
            ul
              li.hover-me
                a(href='')
                | Profil
                i.fa.fa-angle-right
                .sub-menu-2
                  ul
                    li
                      a(href='/account') Profil
                    li
